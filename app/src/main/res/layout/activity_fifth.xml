<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_fifth"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nyc.c4q.ramonaharrison.buggyapp.FifthActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:hint="@string/enter_a_word"/>


    <Button
        android:text="Create a repeted word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:id="@+id/run_button"/>

    <TextView
        android:id="@+id/repeated_word"
        android:layout_margin="16dp"
        android:layout_below="@id/run_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
